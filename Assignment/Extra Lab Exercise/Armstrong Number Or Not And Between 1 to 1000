#include <stdio.h>
#include <math.h>

int main() {
    int num, originalNum, remainder, n = 0;
    int result = 0, temp;

    // ---- PART 1: Check Armstrong Number ----
    printf("Enter a number: ");
    scanf("%d", &num);

    originalNum = num;

    // Count number of digits
    temp = num;
    while (temp != 0) {
        temp /= 10;
        ++n;
    }

    // Compute sum of each digit raised to the power of n
    temp = num;
    while (temp != 0) {
        remainder = temp % 10;
        result += pow(remainder, n);
        temp /= 10;
    }

    if (result == originalNum)
        printf("%d is an Armstrong number.\n", originalNum);
    else
        printf("%d is not an Armstrong number.\n", originalNum);

    // ---- PART 2: Find all Armstrong numbers between 1 and 1000 ----
    printf("\nArmstrong numbers between 1 and 1000 are:\n");

    for (int i = 1; i <= 1000; i++) {
        int num2 = i, rem2, result2 = 0, digits = 0;
        int temp2 = i;

        // Count digits
        while (temp2 != 0) {
            temp2 /= 10;
            ++digits;
        }

        temp2 = i;
        while (temp2 != 0) {
            rem2 = temp2 % 10;
            result2 += pow(rem2, digits);
            temp2 /= 10;
        }

        if (result2 == i)
            printf("%d ", i);
    }

    return 0;
}