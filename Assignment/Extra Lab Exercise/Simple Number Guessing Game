#include <stdio.h>
#include <stdlib.h>   // for rand(), srand()
#include <time.h>     // for time()

int main() {
    int number, guess, attempts = 0, maxAttempts = 7; // limit attempts
    srand(time(0));  // seed random number generator

    number = rand() % 100 + 1; // random number between 1 and 100

    printf("ðŸŽ¯ Welcome to the Number Guessing Game!\n");
    printf("I'm thinking of a number between 1 and 100.\n");
    printf("You have %d attempts to guess it.\n\n", maxAttempts);

    // Loop until user guesses correctly or attempts finish
    do {
        printf("Enter your guess: ");
        scanf("%d", &guess);
        attempts++;

        if (guess == number) {
            printf("\nðŸŽ‰ Congratulations! You guessed it right in %d attempts.\n", attempts);
            break;
        } else if (guess > number) {
            printf("Too high! Try a smaller number.\n");
        } else {
            printf("Too low! Try a larger number.\n");
        }

        printf("Attempts left: %d\n\n", maxAttempts - attempts);

    } while (attempts < maxAttempts);

    if (attempts == maxAttempts && guess != number) {
        printf("\nâŒ Sorry, you've used all attempts! The number was %d.\n", number);
    }

    printf("\nThanks for playing! ðŸ˜„\n");
    return 0;
}